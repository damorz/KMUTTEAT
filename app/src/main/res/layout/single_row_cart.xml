<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Colum"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mPicmenuC"
                android:layout_width="260dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:layout_weight="10"
                app:srcCompat="@drawable/ic_preimage"
                tools:ignore="VectorDrawableCompat" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mNamemenuC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="15dp"
                    android:text="Name"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="#EB6B03"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/mNameresC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="1dp"
                    android:text="Name res"
                    android:textColor="#708090"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/mPriceC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="2dp"
                    android:drawableLeft="@drawable/ic_price"
                    android:text="Prize"
                    android:textColor="#708090"
                    android:textSize="12dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <Button
                        android:id="@+id/addfood"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="27dp"
                        android:layout_marginLeft="23dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/ic_plus" />

                    <Button
                        android:id="@+id/minusfood"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="30dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/ic_minus" />

                    <TextView
                        android:id="@+id/countfood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="#000000"
                        android:text="count" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_weight="10"
            app:cardBackgroundColor="#e5e7e9">

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>